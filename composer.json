{
  "name": "swoft/cli",
  "type": "project",
  "keywords": [
    "php",
    "swoole",
    "helper",
    "swoft-cli",
    "swoft"
  ],
  "description": "micro-service framework base on swoole",
  "license": "Apache-2.0",
  "require": {
    "php": ">7.1.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "toolkit/cli-utils": "^1.0",
    "swoft/component": "2.0.x-dev"
  },
  "require-dev": {
    "swoft/swoole-ide-helper": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Swoft\\Cli\\": "app/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SwoftTest\\Cli\\": "test/"
    }
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://packagist.phpcomposer.com"
    },
    "component": {
      "type": "git",
      "url": "https://github.com/ulue/swoft-component.git"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit -c phpunit.xml",
    "cs-fix": "./vendor/bin/php-cs-fixer fix $1"
  }
}
