{
  "name": "swoft/cli",
  "type": "project",
  "keywords": [
    "php",
    "swoole",
    "helper",
    "swoft-cli",
    "swoft"
  ],
  "description": "microservice framework base on swoole",
  "license": "Apache-2.0",
  "require": {
    "php": ">7.1.0",
    "swoft/stdlib": "dev-master as 2.0",
    "swoft/event": "dev-master as 2.0",
    "swoft/console": "dev-master as 2.0"
  },
  "autoload": {
    "psr-4": {
      "Swoft\\Cli\\": "src/"
    },
    "files": []
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Swoft\\CliTest\\": "test/"
    }
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://packagist.laravel-china.org"
    },
    "event": {
      "type": "git",
      "url": "https://github.com/swoft-cloud/swoft-event.git"
    },
    "stdlib": {
      "type": "git",
      "url": "https://github.com/swoft-cloud/swoft-stdlib.git"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit -c phpunit.xml",
    "cs-fix": "./vendor/bin/php-cs-fixer fix $1"
  }
}
